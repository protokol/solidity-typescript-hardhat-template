{
	"plugins": ["prettier-plugin-solidity"],
	"trailingComma": "es5",
	"tabWidth": 4,
	"semi": false,
	"singleQuote": false,
	"useTabs": true,
	"printWidth": 120,
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"parser": "solidity-parse",
				"printWidth": 80,
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": false,
				"bracketSpacing": true
			}
		}
	]
}
